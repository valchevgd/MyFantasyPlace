{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content col-sm-8"
         style="padding: 10px; border-radius: 15px; border: 4px solid darkgreen; background-color: green; color: white">
        {% for msg in app.session.flashBag.get('message') %}
            <div class="alert alert-secondary ">
                {{ msg }}
            </div>
        {% endfor %}
        <h3 style="text-align: center">Select Player</h3>
        <table class="table">
            <tr>
                <th style="text-align: center">Player Name</th>
                <th style="text-align: center">Player Value</th>
                <th style="text-align: center">Options</th>
            </tr>
            {% for player in players %}
                {% if player.name not in userPlayers|keys%}
                        <tr>
                            <td style="text-align: center">{{ player.name }}</td>
                            <td style="text-align: center">{{ player.value }}</td>
                            <td style="text-align: center"><a
                                        href="{{ path('buy_player', {'type':type, 'playerId':player.id}) }}"
                                        class="btn btn-outline-light" role="button" aria-disabled="false">View</a></td>
                        </tr>
                {% endif %}
            {% endfor %}
        </table>
    </div>
{% endblock %}


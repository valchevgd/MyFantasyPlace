{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content col-sm-6">
        <div style="margin: 10px; padding: 10px; border-radius: 15px; background-color: green; color: white">
            <form name="authenticate" action="{{ path('security_login') }}" method="post">

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Email" name="_username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="Password" name="_password">
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <div style="text-align: end">
                    <a href="{{ path('index') }}" class="btn btn-danger" role="button">Cancel</a>
                    <input class="btn btn-outline-light" type="submit" value="Login">
                </div>
            </form>
        </div>
    </div>

{% endblock %}
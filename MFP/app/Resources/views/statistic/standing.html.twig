{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content"
         style="padding: 10px; border-radius: 15px; border: 4px solid darkgreen; background-color: green; color: white">
        <div class="row" style="padding: 10px; margin: 10px">
            <div style="margin: 10px">
                <a href="{{ path('standing', {'type':'snooker', 'period':'season'}) }}"
                   class="btn btn-outline-light">Snooker Standing</a>
            </div>
            <div style="margin: 10px">
                <a href="{{ path('standing', {'type':'darts', 'period':'season'}) }}"
                   class="btn btn-outline-light">Darts Standing</a>
            </div>
        </div>
        <div class="container body-content">
            <div>
                <h4>{{ type|capitalize }} Standing</h4>
            </div>
            <table border="1" style="border: white; text-align: center">
                <tr>
                    <th colspan="2">Username</th>
                    <th><a href="{{ path('standing', {'type':type, 'period':'season'}) }}"
                           style="color: white;">Season Fantasy Points</a></th>
                    <th><a href="{{ path('standing', {'type':type, 'period':'tournament'}) }}"
                           style="color: white">Tournament Fantasy Points</a></th>
                </tr>
                {% for user in userRank %}
                    <tr>
                        <td><img src="{{ asset('uploads/images/' ~ user.image) }}" width="30" height="20">
                        </td>
                        <td><a href="{{ path('profile', {'id':user.id}) }}"
                               style="color: white">{{ user.username }}</a></td>
                        {% if type == "snooker" %}
                            <td>{{ user.snookerSeasonPoints }}</td>
                        {% else %}
                            <td>{{ user.dartsSeasonPoints }}</td>
                        {% endif %}
                        {% if type == "snooker" %}
                            <td>{{ user.snookerTournamentPoints }}</td>
                        {% else %}
                            <td>{{ user.dartsTournamentPoints }}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
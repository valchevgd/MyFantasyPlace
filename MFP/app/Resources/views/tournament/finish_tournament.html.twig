{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content col-sm-6"
         style="padding: 10px; border-radius: 15px; border: 4px solid darkgreen; background-color: green; color: white; text-align: center">
        {% for msg in app.session.flashBag.get('message') %}
            <div class="alert alert-secondary ">
                {{ msg }}
            </div>
        {% endfor %}

        {% if tournament != null %}
            <h3>{{ tournament.name }}</h3>
            <h6>Are you sure you want to finish this running tournament?</h6>
            <hr>
            {% form_theme form 'bootstrap_3_layout.html.twig' %}
            {{ form(form) }}
        {% else %}
            <div class="alert alert-secondary" style="text-align: center">
                <h5>No running tournaments!</h5>
                <div>
                    <a href="{{ path('start_tournament', {'type': type}) }}" class="btn btn-secondary" role="button">Start Next Tournament</a>
                </div>
                <div style="margin: 5px">
                    <a href="{{ path('admin_remove_players', {'type': type}) }}" class="btn btn-danger" role="button">Drop
                        Players And Restart Players Data</a>
                </div>
                <div style="margin: 5px">
                    <a href="{{ path('add_tournament', {'type': type}) }}" class="btn btn-success" role="button">Add New
                        Tournament And Start New Season</a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}


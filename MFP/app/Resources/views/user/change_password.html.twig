{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content col-sm-6">
        <div style="margin: 10px; padding: 10px; border-radius: 15px; background-color: green; color: white">
            <form method="post">
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="Old Password" name="change_password[oldPassword]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="New Password" name="change_password[newPassword][first]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="Repeat New Password" name="change_password[newPassword][second]">
                </div>
                {{ form_row(form._token) }}
                <input class="btn btn-outline-light" type="submit" value="Change Password">
            </form>
        </div>
    </div>
{% endblock %}

